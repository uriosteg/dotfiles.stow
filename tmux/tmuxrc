# Use UTF8
#set -g utf8
#set-window-option -g utf8 on

# Use 256 colors
#set -g default-terminal "screen-256color"

# Set scrollback to 10,240
set -g history-limit 10240

# Set Ctrl-a as the default prefix and unbind C-b
unbind C-b
set -g prefix C-a

# Use vi mode
set-window-option -g mode-keys vi
bind-key Escape copy-mode
bind-key -T copy-mode-vi 'Escape' send -X cancel
bind-key p paste-buffer
bind-key -T copy-mode-vi 'v' send -X begin-selection
bind-key -T copy-mode-vi 'V' send -X select-line
bind-key -T copy-mode-vi 'y' send -X copy-selection
bind-key -T copy-mode-vi 'r' send -X rectangle-toggle
bind-key < command-prompt -p "send to tmux:" "run-shell 'tmux set-buffer -- \"$(xsel -o -b)\"'"
bind-key > command-prompt -p "send to xsel:" "run-shell 'tmux show-buffer -- | xsel -i -b'"
bind-key + command-prompt "delete buffer"

# Send command to all tmux sessions, windows and panes
#bind-key E command-prompt -p "Command:" \
       #"run \"tmux list-panes -a -F '##{session_name}:##{window_index}.##{pane_index}' \
                     #| xargs -I PANE tmux send-keys -t PANE '%1' Enter\""

# Use | to split vertically and - to split horizontally
bind | split-window -h
bind - split-window -v

# Resize panes using H, J, K, L
bind H resize-pane -L 5
bind J resize-pane -D 5
bind K resize-pane -U 5
bind L resize-pane -R 5

# Mouse options
set -g mouse on

# Pane number display
#set-option -g display-panes-active-colour colour116     # Blueish
#set-option -g display-panes-colour colour216            # Pinkysh

# Clock color
#set-window-option -g clock-mode-colour colour31         # Blue

# Select window or pane
#set -g mode-fg colour255                                # White
#set -g mode-bg colour56                                 # Purple

# Set tmuxline
#source-file $HOME/.dot/tmux/tmuxline-snapshot

# Set tmux plugins
set -g @tpm_plugins '                \
  egel/tmux-gruvbox                  \
  tmux-plugins/tpm                   \
  tmux-plugins/tmux-fpp              \
  tmux-plugins/tmux-cpu              \
  tmux-plugins/tmux-open             \
  tmux-plugins/tmux-yank             \
  tmux-plugins/tmux-copycat          \
  tmux-plugins/tmux-battery          \
  tmux-plugins/tmux-logging          \
  tmux-plugins/tmux-sidebar          \
  tmux-plugins/tmux-sensible         \
  tmux-plugins/tmux-resurrect        \
  tmux-plugins/tmux-continuum        \
  tmux-plugins/tmux-net-speed        \
  tmux-plugins/tmux-sessionist       \
  tmux-plugins/tmux-pain-control     \
  tmux-plugins/tmux-online-status    \
  tmux-plugins/tmux-maildir-counter  \
  tmux-plugins/tmux-prefix-highlight \
'

set -g @prefix_highlight_bg 'colour31'
set -g @prefix_highlight_fg 'colour254'
set -g @net_speed_format '%10s %10s'

run-shell '~/.tmux/plugins/tpm/tpm'
