# vim: syntax=sh

# If bin directory exists load it to $PATH
if [ -d $HOME/.bin ]; then
   PATH="$PATH:$HOME/.bin"
fi

# Set option for editor and pager
export EDITOR='vim'
export GIT_EDITOR="$EDITOR"
export PAGER='most'
export BAT_PAGER='less -R'
export MANPAGER='most -s'
export LESS=' -R'
export LESSOPEN='|~/.lessfilter %s'

# Set options for history
export HISTFILE="$HOME/.${PROFILE_SHELL}_history"
export HISTSIZE='2048'
export SAVEHIST='2048'
export KEYTIMEOUT='1'

# Set options for zsh
export ZSH_CACHE_DIR="$ZSH/cache"
export ZSH_TMUX_AUTOSTART=true

# Set antigen options
ADOTDIR="$HOME/.antigen"
ANTIGEN_DEFAULT_REPO_URL='https://github.com/robbyrussell/oh-my-zsh'

# Set variables for tiny-care-terminal
export TTC_BREAK='15'
export TTC_POMODORO='45'
export TTC_SAY_BOX='parrot'
export TTC_REPOS="$HOME/dev"
export TTC_REPOS_DEPTH='10'
export TTC_UPDATE_INTERVAL='5'
export TTC_WEATHER='guadalajara'
export TTC_BOTS='tinycarebot,deepquestionbot,year_pogress'

# set grep options
export GREP_OPTIONS='--line-number --color=auto'
export GREP_COLORS='fn=0;38;5;63:se=1;38;5;252:sl=0;38;5;237:cx=0;38;5;246:ln=0;38;5;71:mt=1;38;5;167:rv'

# Set terminal options
export TERM="screen-256color"

# Set system locale
export LC_ALL=en_US.UTF-8

# Powerlvevel 9k settings
export POWERLEVEL9K_MODE='nerdfont-complete'
export POWERLEVEL9K_SHORTEN_STRATEGY='truncate_from_right'
export POWERLEVEL9K_SHORTEN_DELIMITER=''
export POWERLEVEL9K_SHORTEN_DIR_LENGTH='1'
export POWERLEVEL9K_PROMPT_ON_NEWLINE=true
export POWERLEVEL9K_PROMPT_ADD_NEWLINE=true
export POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(os_icon context dir vcs)
export POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(virtualenv status root_indicator background_jobs history time vi_mode)
export POWERLEVEL9K_VI_INSERT_MODE_STRING='\ue62b'
export POWERLEVEL9K_VI_COMMAND_MODE_STRING='\ue7c5'
export POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="%F{blue}\u2570\uf460%f "
export POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX="%F{blue}\u256D\u2500%f"
