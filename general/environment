# vim: syntax=sh
# If bin directory exists load it to $PATH
if [ -d $HOME/bin ]; then
   PATH="$PATH:$HOME/bin"
fi

# Set option for editor and pager
export EDITOR='vim'
export GIT_EDITOR="$EDITOR"
export PAGER='most'
export BAT_PAGER='less -R'
export MANPAGER='most -s'
export LESS=' -R'
export LESSOPEN='|~/.lessfilter %s'

# Set options for history
export HISTFILE="$HOME/.${PROFILE_SHELL}_history"
export HISTSIZE='2048'
export SAVEHIST='2048'
export KEYTIMEOUT='1'

# Set options for zsh
export ZSH_CACHE_DIR="$ZSH/cache"
export ZSH_TMUX_AUTOSTART=true

# Set antigen options
ADOTDIR="$HOME/.antigen"
ANTIGEN_DEFAULT_REPO_URL='https://github.com/robbyrussell/oh-my-zsh'

